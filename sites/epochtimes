
server {
	listen	80;
	
	if ($http_user_agent ~ "qihoobot|Baiduspider|Googlebot|-Google|YandexBot|^$" ) {
		return 403; 
	}

	location / {
		proxy_pass http://www.epochtimes.com;
		proxy_set_header Host www.epochtimes.com;
		proxy_set_header Referer http://www.epochtimes.com;
		proxy_set_header User-Agent $http_user_agent;

		include headers.conf;

		sub_filter_once off;
		sub_filter_types text text/javascript; 
		sub_filter i.epochtimes.com local_server_ip;
		sub_filter www.epochtimes.com local_server_ip;
		sub_filter tuidang.epochtimes.com local_server_ip:82;
		sub_filter imgs.ntdtv.com local_server_ip:8001;
		sub_filter media5.ntdtv.com local_server_ip:8002;
		sub_filter inew3.ntdtv.com local_server_ip:8003;
		sub_filter https://ajax.googleapis.com http://local_server_ip:81;
		sub_filter https://www.youtube.com/embed/ http://local_server_ip:9999/embed/;
		sub_filter /i6/ http://local_server_ip:83/i6/;
		#sub_filter href=/i6/ href=http://local_server_ip:83/i6/;
		#sub_filter src=/i6/ src=http://local_server_ip:83/i6/;
	}
	
	location /info {
		root html;
	}
	
	location /videos {
		root content;
	}

	error_page	 500 502 503 504  /50x.html;
	
	location = /50x.html {
		root   html;
	}
}

server {
	listen	81;
	
	location / {
		proxy_pass https://ajax.googleapis.com;
		proxy_set_header Host ajax.googleapis.com;
		proxy_set_header Referer https://ajax.googleapis.com;
	}
}

server {
	listen	82;
	
	location / {
		proxy_pass http://tuidang.epochtimes.com;
		proxy_set_header Host tuidang.epochtimes.com;

		include headers.conf;

		sub_filter_once off;
		sub_filter_types text; 
		sub_filter www.epochtimes.com local_server_ip;
		sub_filter //epochtimes.com //local_server_ip;
		sub_filter tuidang.epochtimes.com local_server_ip:82;
	}
}


server {
	listen	83;
	
	location / {
		proxy_pass http://img.epochtimes.com;
	}
}



