
server {
	listen	8000;

	if ($http_user_agent ~ "qihoobot|Baiduspider|Googlebot|-Google|YandexBot|^$" ) {
		return 403;		
	}

	location / {
		proxy_pass http://www.ntdtv.com;
		proxy_set_header Host www.ntdtv.com;
		proxy_set_header Referer http://www.ntdtv.com;
		proxy_set_header User-Agent $http_user_agent;

		include headers.conf;
		
		proxy_buffering off;

		sub_filter_once off;
		sub_filter_types text; 
		sub_filter cn.ntdtv.com 198.13.56.205:8088;
		sub_filter www.ntdtv.com 198.13.56.205:8000;
		sub_filter imgs.ntdtv.com 198.13.56.205:8001;
		sub_filter media5.ntdtv.com 198.13.56.205:8002;
		sub_filter inews3.ntdtv.com 198.13.56.205:8003;
		sub_filter ssl.p.jwpcdn.com 198.13.56.205:8004;
		sub_filter ajax.googleapis.com 198.13.56.205:8005;
		sub_filter stream.ntdtv.com:8080 198.13.56.205:8006;
		sub_filter live.ntdimg.com 198.13.56.205:8007;
		sub_filter https://live2.ntdimg.com http://198.13.56.205:8008;
		sub_filter live2.ntdimg.com 198.13.56.205:8008;
		sub_filter cnhls.ntdtv.com 198.13.56.205:8009;
		sub_filter https://www.youtube.com/embed/ http://198.13.56.205:9999/embed/;

		## fail fast
		sub_filter www.google-analytics.com 198.13.56.205:8000;
		sub_filter www.googletagmanager.com 198.13.56.205:8000;
		sub_filter connect.facebook.net 198.13.56.205:8000;
		sub_filter static.chartbeat.net 198.13.56.205:8000;
		sub_filter entitlements.jwplayer.com 198.13.56.205:8000;

	}
}

